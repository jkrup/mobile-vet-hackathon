%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title MobileVet
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    / Le styles
    = stylesheet_link_tag    "application", :media => "all"
    :css
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    -#%link{:href => "../assets/ico/favicon.ico", :rel => "shortcut icon"}/
    -#%link{:href => "../assets/ico/apple-touch-icon-144-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "144x144"}/
    -#%link{:href => "../assets/ico/apple-touch-icon-114-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "114x114"}/
    -#%link{:href => "../assets/ico/apple-touch-icon-72-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "72x72"}/
    -#%link{:href => "../assets/ico/apple-touch-icon-57-precomposed.png", :rel => "apple-touch-icon-precomposed"}/
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "#"}
            %img#nav-logo{:src => "/assets/mobilevet-logo.png"}/
          .nav-collapse.collapse
            %ul.nav
              %li
                %a{:href => "#profile"} My Profile
              %li
                %a{:href => "#history"} Appointment History
              %li
                %a{:href => "#contact"} Make an Appointment
          / /.nav-collapse
    .container
      =yield
      -#.signup
        -#%h1 Registration
        -#%form.form-horizontal
          -#.control-group
            -#%label.control-label{:for => "inputName"} Name
            -#.controls
              -#%input#inputName{:placeholder => "Name", :type => "text"}/
          -#.control-group
            -#%label.control-label{:for => "inputAddress"} Home Address
            -#.controls
              -#%input#inputAddress{:placeholder => "Address", :type => "text"}/
          -#.control-group
            -#%label.control-label{:for => "inputEmail"} Email Address
            -#.controls
              -#%input#inputEmail{:placeholder => "Email", :type => "text"}/
          -#.control-group
            -#%label.control-label{:for => "inputPhone"} Phone
            -#.controls
              -#%input#inputPhone{:placeholder => "Phone Number", :type => "text"}/
          -#.control-group
            -#%label.control-label{:for => "inputPassword"} Password
            -#.controls
              -#%input#inputPassword{:placeholder => "Password", :type => "password"}/
          -#.control-group
            -#%label.control-label{:for => "inputPasswordConfirm"} Confirm Password
            -#.controls
              -#%input#inputPasswordConfirm{:placeholder => "Password", :type => "password"}/
          -#.control-group
            -#.controls.align-center
              -#%button#sign-up-button.btn.btn-primary{:type => "submit"} Sign up!
    -#/ /container
